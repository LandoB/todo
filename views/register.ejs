<!DOCTYPE html> <html>
  <head>
    <title>Register</title>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/todo.css' />
  </head>
  <body>

    <h1>Register to create tasks</h1>

    <form method="POST" action="/register" id="registerForm">


      <div class="formfield">
        <div class="formfield--prompt">Username:</div>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Password:</div>
        <input type="password" id="password" name="password" required>
      </div>

      <input class="submitButton" type="submit"></input>
    </form>

    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
    <script src="http://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>

    <script src="/javascripts/validate.js"></script>
  </body>
</html>
