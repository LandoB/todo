<!DOCTYPE html>
<html>
  <head>
    <title>Your To Do List</title>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Inconsolata:400,700' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/todo.css' />
  </head>

<body>

   <h1 class="greeting"><%= greeting %></h1>
   <section id="toDoList">To Do Items added:</section>
   <ul class="list-of-todo-items">
       <% tasks.forEach(function(task){ %>
       <div class="itemsBorder" id="todo_<%= task._id %>">
       <li><b>Tittle:</b> <%= task.title %><li>
       <li><b>Description:</b> <%= task.description %><li>
       <li><b>Priority:</b> <%=task.priority %></li>
       <li><b>Due Date:</b> <%= task.due_date %><li>
       <li><b>Time:</b> <%= task.timestamp %><li>
       <li><b>Completed?</b> <%= task.complete %><li>
       <p><button class="deleteButton myButton" id="<%= task._id %>">Delete Me</button>
       <button class="editButton myButton" id="<%= task._id %>">Edit Me</button>
       <button class="addButton myButton" id="<%= task._id %>">Add New Item</button></p>
       </div>
       <% }) %>
   </ul>

<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="javascripts/delete.js"></script>
</body>

</html>
